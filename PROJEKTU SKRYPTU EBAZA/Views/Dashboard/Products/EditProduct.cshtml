@model PROJEKTU_SKRYPTU_EBAZA.Data.Product

@{
    //Wyświetla taki tytuł strony w karcie przeglądarki

    ViewData["Title"] = "Edytuj Produkt";

    var suppliers = (List<Supplier>)ViewData["Suppliers"];
    var categories = (List<ProductCategory>)ViewData["Categories"];
}

<h1>Dodaj Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" hidden class="form-control hidden" />
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EAN" class="control-label"></label>
                <input asp-for="EAN" class="form-control" />
                <span asp-validation-for="EAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <input asp-for="ImgPath" hidden class="form-control hidden" />
            <label class="mt-2">Kategoria Produktu</label>
            <select class="form-select" asp-for="CategoryId">
                @foreach (var item in categories)
                {
                    @if (item.Id == Model.CategoryId)
                    {
                        @:   <option value="@item.Id" selected>@item.CategoryName</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }

                }

            </select>

            <label class="mt-2">Dostawca Produktu</label>
            <select class="form-select" asp-for="SupplierId">
                @foreach (var item in suppliers)
                {
                        @if (item.Id == Model.CategoryId)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                }
            </select>


            <div class="form-group mt-3">
                <input type="submit" value="Edytuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Products">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
