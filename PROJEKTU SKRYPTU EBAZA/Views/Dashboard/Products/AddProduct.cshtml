@model PROJEKTU_SKRYPTU_EBAZA.Data.Product

@{
    //Wyświetla taki tytuł strony w karcie przeglądarki

    ViewData["Title"] = "Dodaj Produkt";

    var suppliers = (List<Supplier>)ViewData["Suppliers"];
    var categories = (List<ProductCategory>)ViewData["Categories"];
}

<h1>Dodaj Produkt</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EAN" class="control-label"></label>
                <input asp-for="EAN" class="form-control" />
                <span asp-validation-for="EAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" type="number" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <label class="mt-2">Kategoria Produktu</label>
            <select class="form-select" asp-for="CategoryId">
                @foreach (var item in categories)
                {
                    <option value="@item.Id">@item.CategoryName</option>

                }

            </select>

            <label class="mt-2">Dostawca Produktu</label>
            <select class="form-select" asp-for="SupplierId">
                @foreach (var item in suppliers)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>

            <div class="form-group">
                <p>Wgraj zdjęcie</p>
                <div class="file-field">
                    <div class="btn btn-rounded purple-gradient btn-sm float-left">
                        <span>Wybierz plik</span>
                        <input type="file" name="file">
                    </div>
                   
                </div>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Products">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
