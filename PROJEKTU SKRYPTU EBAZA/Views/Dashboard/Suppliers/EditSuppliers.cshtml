@model Supplier

@{
    //Wyświetla taki tytuł strony w karcie przeglądarki

    ViewData["Title"] = "Edytuj Dostawcę";


}

<h1>Edytuj Dostawcę</h1>

<h4>Dostawca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSupplier" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIP" class="control-label"></label>
                <input asp-for="NIP" class="form-control" />
                <span asp-validation-for="NIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KRS" class="control-label"></label>
                <input asp-for="KRS" class="form-control" />
                <span asp-validation-for="KRS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Regon" class="control-label"></label>
                <input asp-for="Regon" class="form-control" />
                <span asp-validation-for="Regon" class="text-danger"></span>
            </div>     


            <div class="form-group">
                <input type="submit" value="Edytuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Suppliers">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
